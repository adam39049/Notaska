<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- نص الملاحظة -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نص الملاحظة"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_note_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="اكتب ملاحظتك هنا..."
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_marginBottom="16dp" />

    <!-- العلامة -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="العلامة (اختياري)"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:backgroundTint="?attr/colorPrimary"
            android:id="@+id/btn_choose_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اختر علامة"
            android:textSize="12sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_note_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="أدخل علامة للملاحظة"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- العلامات الشائعة -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="العلامات الشائعة:"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_tag_important"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="مهم"
            android:textSize="10sp"
            android:padding="8dp"
            android:backgroundTint="#FF5252"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_tag_work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="عمل"
            android:textSize="10sp"
            android:padding="8dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_tag_personal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="شخصي"
            android:textSize="10sp"
            android:padding="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_tag_idea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="فكرة"
            android:textSize="10sp"
            android:padding="8dp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>