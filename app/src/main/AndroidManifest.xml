<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ أذونات الإشعارات لـ Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ✅ أذونات الصوت -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notenot"
        tools:targetApi="31">

        <!-- النشاط الرئيسي -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Notenot">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- نشاط إضافة/تعديل المهام -->
        <activity
            android:name=".AddTaskActivity"
            android:exported="false"
            android:theme="@style/Theme.Notenot" />

        <!-- نشاط التقارير -->
        <activity
            android:name=".ReportsActivity"
            android:exported="false"
            android:label="التقارير"
            android:theme="@style/Theme.Notenot" />

        <!-- نشاط الإعدادات -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="الإعدادات"
            android:theme="@style/Theme.Notenot" />

        <!-- نشاط تخصيص الألوان -->
        <activity
            android:name=".ThemeActivity"
            android:exported="false"
            android:label="تخصيص الألوان"
            android:theme="@style/Theme.Notenot" />

        <!-- ✅ نشاط الملاحظات الجديد -->
        <activity
            android:name=".NotesActivity"
            android:exported="false"
            android:label="الملاحظات"
            android:theme="@style/Theme.Notenot" />

        <!-- ✅ نشاط إضافة/تعديل الملاحظات -->
        <activity
            android:name=".AddNoteActivity"
            android:exported="false"
            android:label="إضافة ملاحظة"
            android:theme="@style/Theme.Notenot" />

        <!-- مستقبل الإشعارات -->
        <receiver
            android:name=".NotificationReceiver"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>